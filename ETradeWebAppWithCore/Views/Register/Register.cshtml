    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/eTradeLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
