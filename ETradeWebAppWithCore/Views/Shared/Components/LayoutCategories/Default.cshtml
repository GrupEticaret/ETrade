@model List<EntityLayer.Concrete.MainCategory>



<ul class="main-category">
    @foreach (var item in Model)
    {
        <li>
            <a href="#">@item.MainCategoryName <i class="fa fa-angle-right" aria-hidden="true"></i></a>
            <ul class="sub-category">
                @foreach (var item2 in item.SubCategories)
                {
                    <li><a href="#">@item2.SubCategoryName</a></li>
                }
            </ul>
        </li>
    }
</ul>

