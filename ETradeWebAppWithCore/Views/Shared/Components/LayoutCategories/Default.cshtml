@model List<EntityLayer.Concrete.MainCategory>



<link href="~/bootstrap-5.1.3-dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/bootstrap-5.1.3-dist/js/bootstrap.js"></script>
<div class="col-md-3">
    <nav class="navbar bg-light">
        <ul class="navbar-nav">
            <div class="accordion accordion-flush" id="accordionFlushExample">

                @{ int sayac = 1;}
                @foreach (var item in Model)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-heading@(sayac)">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse@(sayac)" aria-expanded="false" aria-controls="flush-collapse@(sayac)">
                                <i class="fa fa-home"></i>@item.MainCategoryName
                            </button>
                        </h2>
                        <div id="flush-collapse@(sayac)" class="accordion-collapse collapse" aria-labelledby="flush-heading@(sayac)" data-bs-parent="#accordionFlushExample">
                            @foreach (var item2 in item.SubCategories)
                            {
                                <div class="accordion-body"><a class="nav-link" href="#">@item2.SubCategoryName</a></div>

                            }
                        </div>
                    </div>
                    sayac++;
                }

                @*@{ int sayac2 = 1;}
